grammar kcl.mdd.cw.sql.SimpleSQL with org.eclipse.xtext.common.Terminals

generate simpleSQL "http://www.mdd.kcl/cw/sql/SimpleSQL"

Model:
	statements+=Statement*
;
	
Statement:
	SELECT | CREATE_DB | CREATE_TABLE | INSERT
;

SELECT:
	'show' (name=ID|'all') 'in' table=ID
;

CREATE_DB:
	'create' 'new' 'database' name=ID
;

CREATE_TABLE:
	'create' 'new' 'table' name=ID 'in' dbName=ID 'with' 'columns' '(' columns+=COLUMN_DEF+ ')'
;

COLUMN_DEF:
	name=ID 'with' 'type' type=TYPE
;

INSERT:
	'add' 'entry' 'to' table=[CREATE_TABLE] 'with' 'columns' data+=Insert_List+
;

Insert_List:
	'"' data=STRING '"'
;

enum TYPE: string | int | double | date;